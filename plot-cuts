#!/usr/bin/env python
from mva.cmd import get_parser

args = get_parser(actions=False).parse_args()

from mva.categories.hadhad import (
    Category_Preselection,
    Category_VBF_NO_DETAJJ_CUT,
    Category_Boosted_NO_PTH_CUT,
    Category_Preselection_NO_MET,
    Category_Preselection_1_JET)
from mva.analysis import get_analysis
from mva.plotting import draw_channel_array
from mva.variables import (VARIABLES, HH_VARIABLES)
from rootpy.tree import Cut
from rootpy.plotting import Hist
from math import pi

if args.channel == 'hadhad':
    VARIABLES.update(HH_VARIABLES)

for year in (2015,):#(2011, 2012):
    analysis = get_analysis(
        args, year=year,
        systematics=False)
    # fakes_region='nOS_ISOL' for met centrality cut
    analysis.normalize(Category_Preselection)

    # show justification of the dEta cut location in VBF
    draw_channel_array(
        analysis, {'dEta_jets': VARIABLES['dEta_jets']},
        mass=125, mode=['gg', 'VBF'], signal_scale=100,
        stack_signal=False,
        signal_colors=['blue', 'red'],
        signal_linestyles=['dashed', 'solid'],
        category=Category_VBF_NO_DETAJJ_CUT,
        region=analysis.target_region,
        show_ratio=False,
        #legend_leftmargin=0.28,
        output_dir='plots/categories',
        output_suffix='_{0}'.format(year % 1000),
        output_formats=['png', 'eps', 'C'],
        arrow_values=[2.])

    templates = {'ditau_vect_sum_pt': Hist(30, 0, 300)}
    # show justification of the ptH cut in boosted
    draw_channel_array(
        analysis, {'ditau_vect_sum_pt': VARIABLES['ditau_vect_sum_pt']},
        templates=templates,
        mass=125, mode=['gg', 'VBF'], signal_scale=100,
        stack_signal=False,
        signal_colors=['blue', 'red'],
        signal_linestyles=['dashed', 'solid'],
        category=Category_Boosted_NO_PTH_CUT,
        region=analysis.target_region,
        show_ratio=False,
        #legend_leftmargin=0.28,
        output_dir='plots/categories',
        output_suffix='_{0}'.format(year % 1000),
        output_formats=['png', 'eps'],
        arrow_values=[100],
        log_ypadding=(0.3, 0))

    # show justification of the MET cut at preselection
    draw_channel_array(
        analysis, {'met_et': VARIABLES['met_et']},
        mass=125, mode=['gg', 'VBF'], signal_scale=50,
        stack_signal=False,
        signal_colors=['blue', 'red'],
        signal_linestyles=['dashed', 'solid'],
        separate_legends=True,
        category=Category_Preselection_NO_MET,
        region=analysis.target_region,
        show_ratio=False,
        output_dir='plots/categories',
        output_suffix='_{0}'.format(year % 1000),
        output_formats=['png', 'eps'],
        ypadding=(0.55, 0))

    # show justification of jet pt cuts for vbf
    draw_channel_array(
        analysis, {'jet_0_pt': VARIABLES['jet_0_pt']},
        mass=125, mode=['gg', 'VBF'], signal_scale=50,
        stack_signal=False,
        signal_colors=['blue', 'red'],
        signal_linestyles=['dashed', 'solid'],
        separate_legends=True,
        category=Category_Preselection,
        region=analysis.target_region,
        show_ratio=False,
        output_dir='plots/categories',
        output_suffix='_{0}'.format(year % 1000),
        output_formats=['png', 'eps'],
        ypadding=(0.55, 0))

    draw_channel_array(
        analysis, {'jet_1_pt': VARIABLES['jet_1_pt']},
        mass=125, mode=['gg', 'VBF'], signal_scale=50,
        stack_signal=False,
        signal_colors=['blue', 'red'],
        signal_linestyles=['dashed', 'solid'],
        separate_legends=True,
        category=Category_Preselection_1_JET,
        region=analysis.target_region,
        show_ratio=False,
        output_dir='plots/categories',
        output_suffix='_{0}'.format(year % 1000),
        output_formats=['png', 'eps'],
        ypadding=(0.55, 0))

    # show justification of deta taus cut for vbf
    draw_channel_array(
        analysis, {'dEta_jets': VARIABLES['dEta_jets']},
        mass=125, mode=['gg', 'VBF'], signal_scale=50,
        stack_signal=False,
        signal_colors=['blue', 'red'],
        signal_linestyles=['dashed', 'solid'],
        separate_legends=True,
        category=Category_Preselection_1_JET,
        region=analysis.target_region,
        show_ratio=False,
        output_dir='plots/categories',
        output_suffix='_{0}'.format(year % 1000),
        output_formats=['png', 'eps'],
        ypadding=(0.55, 0))
